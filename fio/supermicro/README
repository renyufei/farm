mdadm --create /dev/md/md-raid0-x-aj --level=0 --raid-devices=12 /dev/sdx1 /dev/sdy1 /dev/sdz1 /dev/sdab1 /dev/sdac1 /dev/sdad1 /dev/sdae1 /dev/sdaf1 /dev/sdag1 /dev/sdah1 /dev/sdai1 /dev/sdaj1
